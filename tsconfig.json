{
    "compilerOptions": {
        "lib": [
            "es2017",
            "es2016",
            "es2015",
            "dom",
        ],
        "noImplicitAny": true,
        "allowJs": false,
        "removeComments": true,
        "target": "es2020",
        "module": "commonjs",
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "noEmit": true,
        "outDir": "dist"
    },
    "include": [
        "api",
        "cli"
    ],
    "exclude": [
        "node_modules"
    ],
    "rules": {
        "no-console": false,
        "interface-name": [
            true,
            "never"
        ]
    }
}